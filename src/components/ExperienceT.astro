---
import Section from "./Section.astro";
---

<Section 
    title="Experience Tesla"
    subtitle="Schedule a Demo Drive Today"
    color="white"
    >
        <div slot="footer"
        class="pb-20">
            <a class="border-[3px] text-sm font-medium px-16 py-2 inline-block text-white hover:bg-white hover:text-black transition-colors backdrop-blur-sm" href="#">Demo Drive</a>
        </div>
        <video
            slot="background" 
            class="object-center object-cover h-full w-full" 
            autoplay 
            muted 
            loop 
            src="/video.webm"></video>
</Section>